doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Checkers
    link(rel='stylesheet', href='http://yui.yahooapis.com/pure/0.5.0-rc-1/pure-min.css')
    link(rel='stylesheet', href='http://yui.yahooapis.com/pure/0.5.0-rc-1/grids-responsive-min.css')
    link(rel='stylesheet', href='./css/app.css')
  body
    .pure-g
    .pure-g
      .pure-u-1-3

    .pure-g
      .pure-u-1-3
        h1 Checkers
        button#start.pure-button.pure-button-primary.button-secondary Reset
      .pure-u-1-3
        table.checker-board
          tbody#board
            - for(j=0; j<8; j++)
              tr
                -for(i=0; i<8; i++)
                  td.container(data-x=i, data-y=j)

    .pure-g
      .pure-u-1-3.hintmsg.hidemsg If you jump, you must complete any additional jumps!


    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(src='./js/main.js')
